@model Blogger.ViewModels.CommentPageModel
@{
    ViewData["Title"] = "Show";
}
<div>
    <div>
        <h2>@Model.Post.PostTitle</h2>
        <h3>@Model.Post.PostContent</h3>
    </div>
    <div>
        @if (Model.CommentList.Count == 0)
        {
            <h4>Комментарии отсуствуют</h4>
        }
        else
        {
            <h2>Комментарии:</h2>
            <ul>
                @foreach (var comment in Model.CommentList)
                {
                    <li>
                        <h4>@string.Format($"{comment.User.Name} сказал: ")</h4>
                        <h4>@comment.Content</h4>
                    </li>
                }
            </ul>
        }
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <div>
            <h2>Добавить комментарий</h2>
            <div>
                <form method="post">
                    <input type="hidden" name="postid" value="@Model.Post.ID" />
                    <textarea name="content"></textarea>
                    <button class="btn btn-info" asp-action="AddComment" asp-controller="Comment">Добавить</button>
                </form>
            </div>
        </div>
    }
</div>

