@model Blogger.ViewModels.RegisterModel
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;
@{
    ViewData["Title"] = "Registrate";
}

@section scripts{
    @{ await Html.RenderPartialAsync("~/views/Shared/_ValidationScriptsPartial.cshtml");}
}

<form asp-antiforgery="true">
    <div>
        <div>
            <h4>E-mail: </h4>
            <input type="email" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <h4>@Localizer["PasswordLabel"]: </h4>
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <h4>@Localizer["RepeatPasswordLabel"]: </h4>
            <input type="password" asp-for="RepeatedPassword" />
            <span asp-validation-for="RepeatedPassword"></span>
        </div>
        <input type="submit" value="Зарегистрироваться" asp-action="Registrate" asp-controller="Auth" />
    </div>
</form>

